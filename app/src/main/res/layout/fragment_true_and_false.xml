<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrueAndFalseFragment">

    <LinearLayout
        android:id="@+id/layTrueOrFalse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/questionTvTrueOrFalse"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/question_background"
            android:fontFamily="casual"
            android:gravity="center"
            android:padding="@dimen/_10ssp"
            android:text="كم ارتفاع برج خليفة عن سطح الارض"
            android:textColor="@color/semiBlack"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/questionImgTrue"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_true_ans" />

            <ImageView
                android:id="@+id/questionImgFalse"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_false_ans" />


        </LinearLayout>


    </LinearLayout>
</FrameLayout>