<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrueDialogFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/green"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">


            <ImageView
                android:id="@+id/imgTrueDialog"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_70sdp"
                app:srcCompat="@drawable/ic_true_dialog" />

            <TextView
                android:id="@+id/trueAns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/true_answer"
                android:textAlignment="center"
                android:textStyle="bold" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvHintTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:padding="@dimen/_10sdp"
                android:text="يرتفع برج خليفة عن سطح الارض 828م"
                android:textAlignment="center"
                android:textColor="@color/semiBlack"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>